<div class="d-flex justify-content-center align-items-center">
    <div>
        <h3>Fitness Tracker</h3>
        {{!-- {{#if workouts.empty}} --}}
        <div class='card' style='width: 18rem;'>
            <div class='card-body'>
                <h5 class='card-title'>Add Your Exercise</h5>


                <div>
                    <p>Exercise Type:</p>
                </div>
                <div class='dropdown'>
                    <button class='btn btn-secondary dropdown-toggle mb-3' type='button' id='dropdownMenuButton'
                        data-bs-toggle='dropdown' aria-expanded='false'>
                        Select an Exercise Type
                    </button>
                    <ul class='dropdown-menu' id="exercise-list" aria-labelledby='dropdownMenuButton1'>
                        <li><a class='dropdown-item' href='#'>Resistance</a></li>
                        <li><a class='dropdown-item' href='#'>Cardio</a></li>
                    </ul>
                </div>


                <div class="mb-3">
                    <label for="NameInput" class="form-label">Exercise name:</label>
                    <input type="text" class="form-control" id="NameInput">
                </div>

                <div class="mb-3">
                    <label for="WeightsInput" class="form-label">Weights:</label>
                    <input type="text" class="form-control" id="WeightsInput">
                </div>

                <div class="mb-3">
                    <label for="SetsInput" class="form-label">Sets:</label>
                    <input type="text" class="form-control" id="SetsInput">
                </div>

                <div class="mb-3">
                    <label for="RepsInput" class="form-label">Reps:</label>
                    <input type="text" class="form-control" id="RepsInput">
                </div>

                <div class="mb-3">
                    <label for="DurationInput" class="form-label">Duration:</label>
                    <input type="text" class="form-control" id="DurationInput">
                </div>



                <div class="row justify-content-center">
                    <a href='#' class='btn btn-primary create-wo-btn mt-3 col-6' id="complete-btn">Complete</a>
                    <a href='#' class='btn btn-success create-wo-btn mt-3 col-6' id="new-exercise-btn">Add Exercise</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="js/exercise.js"></script>